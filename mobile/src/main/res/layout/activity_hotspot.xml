<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/navigation_toolbar" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:gravity="left"
        />



    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/global_color_blue_primary_dark"
        android:textColor="@color/global_bg_back"
        android:text="Attiva" />

        <TextView
            android:id="@+id/info2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_marginTop="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">



        <TextView
            android:id="@+id/TNome"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/TNomeRete"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:textColor="@color/global_color_red_primary"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">

        <TextView
            android:id="@+id/TPass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/TPassword"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:textColor="@color/global_color_red_primary"
            />

    </LinearLayout>


</LinearLayout>

</LinearLayout>
